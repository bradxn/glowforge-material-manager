{
  "short_name": "Glowforge Materials",
  "name": "Glowforge Material Editor",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Glowforge Material Editor"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://app.glowforge.com/*"
  ],
  "background": {
    "scripts": [
      "background.js",
      "materials.json"
    ]
  },
  "externally_connectable": {
    "matches": [
      "*://app.glowforge.com/*"
    ]
  },
  "content_scripts": [
    {
    "matches": [
      "*://app.glowforge.com/*"
    ],
    "js":  ["inject.js" ],
    "run_at": "document_end",
    "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "content.js"
  ],
  "version": "1.0"
}
